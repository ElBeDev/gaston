    // Obtener mensajes de una conversaci√≥n espec√≠fica
    async getChatMessages(chatId, limit = 50, offset = 0) {
        try {
            if (!this.isConnected) {
                throw new Error('WhatsApp no est√° conectado');
            }

            console.log(`üì® Obteniendo mensajes del chat: ${chatId} (limit: ${limit})`);
            
            // Verificar si es un chat de demostraci√≥n
            if (chatId.startsWith('demo_')) {
                console.log('üì® Retornando mensajes de demostraci√≥n...');
                return this.createDemoMessages(chatId);
            }
            
            try {
                const chat = await Promise.race([
                    this.client.getChatById(chatId),
                    new Promise((_, reject) => setTimeout(() => reject(new Error('Timeout')), 8000))
                ]);
                
                const messages = await Promise.race([
                    chat.fetchMessages({ limit: limit }),
                    new Promise((_, reject) => setTimeout(() => reject(new Error('Timeout')), 8000))
                ]);
                
                console.log(`üì® Obtenidos ${messages.length} mensajes del chat`);
                
                // Procesar mensajes con soporte para multimedia
                const processedMessages = await Promise.all(
                    messages
                        .slice(offset)
                        .map(async message => {
                            const baseMessage = {
                                id: message.id._serialized,
                                body: message.body || '',
                                type: message.type || 'chat',
                                timestamp: message.timestamp,
                                fromMe: message.fromMe,
                                author: message.author,
                                fromName: message._data?.notifyName || message.from,
                                hasMedia: message.hasMedia || false,
                                ack: message.ack || 1
                            };

                            // Si el mensaje tiene multimedia, procesarlo
                            if (message.hasMedia) {
                                try {
                                    const media = await message.downloadMedia();
                                    if (media) {
                                        // Generar un nombre de archivo m√°s amigable
                                        let filename = media.filename;
                                        if (!filename || filename.includes('@') || filename.includes('_') || filename.length > 50) {
                                            const timestamp = new Date(message.timestamp * 1000);
                                            const timeStr = timestamp.toLocaleTimeString('es-ES', { 
                                                hour: '2-digit', 
                                                minute: '2-digit' 
                                            });
                                            
                                            if (message.type === 'image') {
                                                filename = `Imagen_${timeStr}.jpg`;
                                            } else if (message.type === 'audio' || message.type === 'ptt') {
                                                filename = message.type === 'ptt' ? 
                                                    `Mensaje_voz_${timeStr}.ogg` : 
                                                    `Audio_${timeStr}.mp3`;
                                            } else if (message.type === 'video') {
                                                filename = `Video_${timeStr}.mp4`;
                                            } else if (message.type === 'document') {
                                                filename = `Documento_${timeStr}`;
                                            } else {
                                                filename = `Archivo_${timeStr}`;
                                            }
                                        }

                                        baseMessage.media = {
                                            mimetype: media.mimetype,
                                            data: media.data, // Base64 data
                                            filename: filename,
                                            filesize: media.filesize || 0
                                        };
                                        
                                        // Agregar informaci√≥n espec√≠fica seg√∫n el tipo de media
                                        if (message.type === 'image') {
                                            baseMessage.media.isImage = true;
                                        } else if (message.type === 'audio' || message.type === 'ptt') {
                                            baseMessage.media.isAudio = true;
                                            baseMessage.media.duration = message._data?.duration || 0;
                                        } else if (message.type === 'video') {
                                            baseMessage.media.isVideo = true;
                                            baseMessage.media.duration = message._data?.duration || 0;
                                        } else if (message.type === 'document') {
                                            baseMessage.media.isDocument = true;
                                        }
                                    }
                                } catch (mediaError) {
                                    console.error('‚ùå Error descargando multimedia:', mediaError);
                                    baseMessage.media = {
                                        error: 'No se pudo cargar el archivo multimedia',
                                        mimetype: 'error/error',
                                        isError: true
                                    };
                                }
                            }

                            return baseMessage;
                        })
                ); // Mantener orden cronol√≥gico: antiguos arriba, nuevos abajo

                return processedMessages;
            } catch (realChatError) {
                console.log('üì® No se pudieron obtener mensajes reales, usando demo...');
                return this.createDemoMessages(chatId);
            }
            
        } catch (error) {
            console.error('‚ùå Error al obtener mensajes del chat:', error);
            return this.createDemoMessages(chatId);
        }
    }

